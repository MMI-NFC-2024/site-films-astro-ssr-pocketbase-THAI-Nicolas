---
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params as {
    id:string
} ;
const personne = await Astro.locals.pb.collection("personnes").getOne(id) ;
---
<Layout>
    <div class="max-w-4xl mx-auto px-4 py-16">
        <div class="mb-8">
            <a href="/personnes" class="link link-hover text-sm">← Retour aux acteurs</a>
        </div>
        
        <div class="space-y-8">
            <div>
                <h1 class="text-5xl font-bold mb-4">{personne.prenom} {personne.nom}</h1>
                <div class="flex gap-4 flex-wrap">
                    {personne.profession && personne.profession.length > 0 && (
                        <div class="badge badge-lg">{personne.profession.join(', ')}</div>
                    )}
                    {personne.nationalite && (
                        <div class="badge badge-outline badge-lg">{personne.nationalite}</div>
                    )}
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {personne.date_de_naissance && (
                    <div class="bg-base-200 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold mb-2">Né(e) le</h3>
                        <p class="text-base-content/80">{new Date(personne.date_de_naissance).toLocaleDateString('fr-FR')}</p>
                    </div>
                )}
                {personne.date_de_deces && (
                    <div class="bg-base-200 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold mb-2">Décédé(e) le</h3>
                        <p class="text-base-content/80">{new Date(personne.date_de_deces).toLocaleDateString('fr-FR')}</p>
                    </div>
                )}
            </div>
            
            <div class="flex gap-4">
                {Astro.locals.pb.authStore.record?.id === personne.user && (
                    <a href={`/personnes/edit/${personne.id}`} class="btn btn-primary">Modifier la personne</a>
                )}
                <a href="/personnes" class="btn btn-ghost">Voir d'autres acteurs</a>
            </div>
        </div>
    </div>
</Layout>