---
import slug from 'slug';
import type { FilmsRecord } from '../pocketbase-types';

interface Props {
    film:FilmsRecord
}

const film = Astro.props.film;
---

<a href={`/films/${film.id}-${slug(film.titre ?? "Inconnu")}`} class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
    <div class="card-body">
        <h2 class="card-title text-lg line-clamp-2">{film.titre}</h2>
        {film.synopsis && (
            <p class="text-sm text-base-content/70 line-clamp-3">{film.synopsis}</p>
        )}
        <div class="card-actions justify-between items-center mt-4">
            {film.duree_min && (
                <span class="text-xs text-base-content/60 bg-base-100 px-3 py-1 rounded">{film.duree_min} min</span>
            )}
            <svg class="w-5 h-5 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </div>
    </div>
</a>